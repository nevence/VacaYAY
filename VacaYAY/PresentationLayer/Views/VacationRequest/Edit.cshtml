@using DataAccesLayer.Entities
@using System.Security.Claims
@using static DataAccesLayer.Entities.Enums
@model BusinessLogicLayer.Dto.VacationRequestDto.VacationRequestDto

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="EmployeeComment" class="control-label mb-1">Add Employee Comment</label>
                <input asp-for="EmployeeComment" class="form-control" value="@Model.EmployeeComment" />
                <span asp-validation-for="EmployeeComment" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label">Leave start date</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label">Leave end date</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <input asp-for="HRComment" type="hidden" value="@Model.HRComment" />
            <input asp-for="Status" type="hidden" value="@Model.Status" />
            <input asp-for="LeaveType" type="hidden" value="@Model.LeaveType" />

            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    Save <i class="fa-solid fa-check ms-2"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fa-solid fa-right-from-bracket ms-2"></i></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
