@using DataAccesLayer.Entities
@using static DataAccesLayer.Entities.Enums
@model BusinessLogicLayer.Dto.VacationRequestDto.VacationRequestDto

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Are you sure you want to delete this request?</h1>

<div class="row">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Full name
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt class="col-sm-2">
                Start date
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.StartDate)
            </dd>

            <dt class="col-sm-2">
                End date
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.EndDate)
            </dd>

            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt class="col-sm-2">
                Leave Type
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.LeaveType)
            </dd>

            <dt class="col-sm-2">
                HR Comment
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.HRComment)
            </dd>

            <dt class="col-sm-2">
                Employee comment
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.EmployeeComment)
            </dd>

            <dt class="col-sm-2">
                Request date
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.RequestDate)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="notUsed" value="true" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                Delete <i class="fa-solid fa-trash-can ms-2"></i>
            </button>
        </div>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fa-solid fa-right-from-bracket ms-2"></i></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
