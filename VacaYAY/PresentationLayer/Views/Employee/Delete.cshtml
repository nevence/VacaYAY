@using DataAccesLayer.Entities
@using static DataAccesLayer.Entities.Enums
@model BusinessLogicLayer.Dto.EmployeeDto.EmployeeDto

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Are you sure you want to delete this employee?</h1>

<div class="row">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                First name
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                Last name
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IDNumber)
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.IDNumber)
            </dd>
            <dt class="col-sm-2">
                Days off number
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.DaysOffNumber)
            </dd>
            <dt class="col-sm-2">
                Position
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.PositionCaption)
            </dd>
            <dt class="col-sm-2">
                Employment start date
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.EmploymentStartDate)
            </dd>
            <dt class="col-sm-2">
                Employment end date
            </dt>
            <dd class="col-sm-10 mb-3">
                @Html.DisplayFor(model => model.EmploymentEndDate)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="notUsed" value="true" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                Delete <i class="fa-solid fa-trash-can ms-2"></i>
            </button>
        </div>
    </form>
</div>

<div class="mt-3">
    <a asp-action="Employees" class="btn btn-primary">Back to List <i class="fa-solid fa-right-from-bracket ms-2"></i></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
