@using DataAccesLayer.Entities
@using System.Security.Claims
@using static DataAccesLayer.Entities.Enums
@model BusinessLogicLayer.Dto.PositionDto.PositionDto

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label mb-1">Description</label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input asp-for="Caption" type="hidden" value="@Model.Caption" />
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    Save <i class="fa-solid fa-check ms-2"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Back to List <i class="fa-solid fa-right-from-bracket ms-2"></i></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
