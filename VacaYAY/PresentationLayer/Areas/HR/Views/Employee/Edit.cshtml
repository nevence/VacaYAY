@model BusinessLogicLayer.Dto.EmployeeDto.EmployeeDto

@{
    ViewData["Title"] = "Edit";
    ViewData["EmployeePositionId"] = Model.PositionId;
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="IDNumber" class="control-label"></label>
                        <input asp-for="IDNumber" class="form-control" />
                        <span asp-validation-for="IDNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DaysOffNumber" class="control-label"></label>
                        <input asp-for="DaysOffNumber" class="form-control" />
                        <span asp-validation-for="DaysOffNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PositionId" class="control-label"></label>
                        <select asp-for="PositionId" class="form-control">
                            <option value="">Select Position</option>
                            @await Component.InvokeAsync("PositionsDropdown", ViewData)
                        </select>
                        <span asp-validation-for="PositionId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="EmploymentStartDate" class="control-label"></label>
                        <input asp-for="EmploymentStartDate" class="form-control" />
                        <span asp-validation-for="EmploymentStartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="EmploymentEndDate" class="control-label"></label>
                        <input asp-for="EmploymentEndDate" class="form-control" />
                        <span asp-validation-for="EmploymentEndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    Save <i class="fa-solid fa-check ms-2"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Employees" class="btn btn-primary">
        Back to List
        <i class="fa-solid fa-right-from-bracket ms-2"></i>
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
